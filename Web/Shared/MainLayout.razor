@using Blazored.LocalStorage

@inherits LayoutComponentBase

@inject ILocalStorageService StorageService
@inject NavigationManager NavigationManager

@(Configuration.ResourceSet.Render())

@_solidsVariantLoader.RenderStylesheets()

@if (_defaultVariantLoader.Complete)
{
    @_defaultVariantLoader.RenderStylesheets()
    @_header1.Render(NavigationManager)
    <CascadingValue Value="@_rootLayer" Name="Layer">
        <CascadingValue Value="@_header1" Name="PrimaryHeader">
            @Body
        </CascadingValue>
    </CascadingValue>
    @_defaultVariantLoader.RenderDropdown()
}