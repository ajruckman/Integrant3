@using Blazored.LocalStorage

@inherits LayoutComponentBase

@inject ILocalStorageService StorageService
@inject NavigationManager NavigationManager

@(Configuration.ResourceSet.Render())

@_solidsThemeLoader.RenderLink()

@if (_defaultThemeLoader.Complete)
{
    @_defaultThemeLoader.RenderLink()
    @_header1.Render(NavigationManager)
    <CascadingValue Value="@_rootLayer" Name="Layer">
        <CascadingValue Value="@_header1" Name="PrimaryHeader">
            @Body
        </CascadingValue>
    </CascadingValue>
    @_defaultThemeLoader.RenderDropdown()
}